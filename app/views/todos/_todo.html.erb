<%= form_with model: [list, todo], data: { turbo_frame: "todo_#{todo.id}" } do |f| %>
  <div class="list-group-item d-flex align-items-center">
    <div class="d-flex flex-shrink-0">
      <label for="todo_<%= todo.id %>">
        Level: <%= "#{index + 1}" %>
      </label>
      <%= f.check_box :checked, id: "todo_#{todo.id}", class: "form-check-input me-1", onchange: 'this.form.requestSubmit()' %>
    </div>
    <label for="todo_<%= todo.id %>">
      <%= todo.content %>
    </label>
  </div>
<% end %>
