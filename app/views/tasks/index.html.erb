<div class="container-fluid px-0 py-5 my-5">
  <div class="row mx-0">
    <div class="col px-4 text-center">

      <div id="flash">
        <%= render "shared/flash" %>
      </div>

      <h1 class="white-text">みんなのクエスト</h1>

      <%= turbo_frame_tag @task do %>

        <%= render "form", task: @task %>

        <% @tasks.each do |task| %>
          <%= render partial: task %>
        <% end %>

      <% end %>

    </div>
  </div>
</div>
