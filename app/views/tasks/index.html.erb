<div class="container px-4 py-5 my-5">
  <div class="text-center">

    <p style="color: white"><%= notice %></p>

    <h1 class=" white-text">みんなのクエスト</h1>

    <%= link_to "マイクエスト作成", new_task_path, class: "btn btn-primary" %>

    <div id="tasks">
      <% @tasks.each do |task| %>
        <%= render 'task', task: task %>
        <p>
          <%= link_to "クエスト詳細", task %>
        </p>
      <% end %>
    </div>

  </div>
</div>
