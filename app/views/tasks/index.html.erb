<div class="container px-4 py-5 my-5">
  <div class="text-center white-text">

    <p style="color: white"><%= notice %></p>

    <h1>みんなのクエスト</h1>

    <%= link_to "New task", new_task_path %>

    <div id="tasks">
      <% @tasks.each do |task| %>
        <%= render task %>
        <p>
          <%= link_to "Show this task", task %>
        </p>
      <% end %>
    </div>

  </div>
</div>
