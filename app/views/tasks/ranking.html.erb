<div class="container-fluid px-0 py-5 my-5">
  <div class="row mx-0">
    <div class="col px-4 text-center">

      <h1 class="white-text mb-5">ベストクエスト</h1>

      <div class="d-flex align-items-start">
        <div class="d-flex flex-column">
          <%= image_tag "dragon.jpeg", size: "100x100" %>
          <p class="white-text">ルビー ドラゴン</p>
        </div>
        <div class="d-flex flex-column mb-5" style="margin-left: 10px;">
          <div class="p-2 rounded bg-light">
            <p class="mb-0"><i class="bi bi-star-fill" style="color: #ffc107"></i> がたくさん集まったクエストを表彰しているよ！</p>
            <p class="mb-0">　もしかしたら《公式クエスト》として新しく追加されるかも？？　</p>
          </div>
          <div class="p-2 mt-2 rounded bg-light">
            <p class="mb-0">作成から3ヶ月経つと、新しいクエストと入れ変わるよ！</p>
          </div>
        </div>
      </div>

      <% @tasks.each_with_index do |task, index| %>
        <div class="mb-5">
          <div class="d-flex">
            <i class="bi bi-award-fill" style="color: #ffc107; font-size: 2rem;"></i>
            <h1 class="white-text ml-2"><%= index + 1 %>位</h3>
          </div>
          <%= render partial: task %>
        </div>
      <% end %>

    </div>
  </div>
</div>
